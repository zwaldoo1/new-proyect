---
// filepath: [carrusel.astro](http://_vscodecontentref_/1)
const images = [
  "/images/imagen1.jpg",
  "/images/imagen2.jpg",
  "/images/imagen3.jpg",
  "/images/imagen4.jpg",
];
---

<!-- Carrusel 1: izquierda -->
<div class="carousel-container">
  <div class="carousel-track scroll-left">
    {images.map((src, index) => (
      <div class="carousel-item" data-img={src}>
        <img src={src} alt={`Imagen ${index + 1}`} />
      </div>
    ))}
    {images.map((src, index) => (
      <div class="carousel-item" data-img={src}>
        <img src={src} alt={`Imagen ${index + 1}`} />
      </div>
    ))}
  </div>
</div>

<!-- Carrusel 2: derecha -->
<div class="carousel-container">
  <div class="carousel-track scroll-right">
    {images.map((src, index) => (
      <div class="carousel-item" data-img={src}>
        <img src={src} alt={`Imagen ${index + 1}`} />
      </div>
    ))}
    {images.map((src, index) => (
      <div class="carousel-item" data-img={src}>
        <img src={src} alt={`Imagen ${index + 1}`} />
      </div>
    ))}
  </div>
</div>

<!-- Modal -->
<div id="modal" class="modal hidden">
  <img id="modal-image" src="" alt="Imagen ampliada" />
</div>
<style>
  .carousel-container {
    overflow: hidden;
    white-space: nowrap;
    position: relative;
    width: 100%;
    background: #f8f8f8;
    padding: 20px 0;
  }

  .carousel-track {
    display: flex;
    gap: 20px;
    width: max-content;
  }

  .scroll-left {
    animation: scroll-left 20s linear infinite;
  }

  .scroll-right {
    animation: scroll-right 20s linear infinite;
  }

  .carousel-item {
    flex: 0 0 auto;
    width: 200px;
    height: 150px;
    cursor: pointer;
  }

  .carousel-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 10px;
    box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
  }

  @keyframes scroll-left {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-100%);
    }
  }

  @keyframes scroll-right {
    from {
      transform: translateX(-100%);
    }
    to {
      transform: translateX(0);
    }
  }

  .modal {
    position: fixed;
    top: 0;
    left: 0;
    height: 100vh;
    width: 100vw;
    background: rgba(0, 0, 0, 0.8);
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 999;
    cursor: pointer;
    transition: opacity 0.3s ease;
  }

  .modal.hidden {
    display: none;
  }

  .modal img {
    max-width: 90%;
    max-height: 90%;
    border-radius: 10px;
    box-shadow: 0 0 20px rgba(255, 255, 255, 0.2);
  }
</style>
<script is:global>
  window.addEventListener('DOMContentLoaded', () => {
    const items = document.querySelectorAll('.carousel-item');
    const modal = document.getElementById('modal');
    const modalImage = document.getElementById('modal-image');

    items.forEach((item) => {
      item.addEventListener('click', () => {
        const src = item.getAttribute('data-img');
        modalImage.src = src;
        modal.classList.remove('hidden');
      });
    });

    modal.addEventListener('click', () => {
      modal.classList.add('hidden');
    });
  });
</script>
