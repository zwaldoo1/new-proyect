  <body class="flex flex-col min-h-screen bg-transparent text-white">
    <div id="tsparticles" class="absolute inset-0 -z-10"></div>

    <header class="bg-blue-600 text-white p-4">
      <nav class="flex justify-between items-center">
        <div class="text-xl font-bold">Campeonato</div>

        <!-- Botón de menú móvil -->
        <button id="menu-btn" class="md:hidden text-white text-2xl">
          ☰
        </button>

        <!-- Menú -->
        <ul id="menu" class="hidden md:flex flex-col md:flex-row space-y-2 md:space-y-0 md:space-x-4">
          {menu.map((item) => (
            <li class="relative">
              <a href={item.link} class="hover:underline">{item.name}</a>
            </li>
          ))}
        </ul>
      </nav>
    </header>

    <!-- Contenido dinámico de la página -->
    <main class="flex-grow flex flex-col items-center justify-center text-center px-4">
      <slot /> 
    </main>

    <!-- Script para el menú móvil -->
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const menuBtn = document.getElementById("menu-btn");
        const menu = document.getElementById("menu");

        if (menuBtn && menu) {
          menuBtn.addEventListener("click", () => {
            menu.classList.toggle("hidden");
          });
        }
      });
    </script>
